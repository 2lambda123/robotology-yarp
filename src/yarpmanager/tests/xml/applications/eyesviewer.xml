<application>
    <name>EyesViewer</name>
    <description>A fake robot eyes viewer running on a cluster of computer</description>
    <version>1.0</version>
    <authors>
        <author email="ali.paikan@iit.it">Ali Paikan</author>
    </authors>
    <module>
        <name>test_grabber</name>
        <parameters>--mode ball</parameters>
        <node>node1</node>
        <prefix>/Ball</prefix>
        <deployer>yarpdev</deployer>
        <geometry>(Pos (x 117.5) (y 144.7))</geometry>
    </module>
    <module>
        <name>test_grabber</name>
        <parameters>--mode line</parameters>
        <node>localhost</node>
        <prefix>/Line</prefix>
        <deployer>yarpdev</deployer>
        <geometry>(Pos (x 118.5) (y 231.7))</geometry>
    </module>
    <module>
        <name>yarpview</name>
        <parameters></parameters>
        <node>localhost</node>
        <prefix>/Ball</prefix>
        <geometry>(Pos (x 488.5) (y 145.7))</geometry>
    </module>
    <module>
        <name>yarpview</name>
        <parameters></parameters>
        <node>localhost</node>
        <prefix>/Line</prefix>
        <geometry>(Pos (x 493.5) (y 231.7))</geometry>
    </module>
    <connection>
        <from>/Ball/grabber</from>
        <to>/Ball/yarpview/img:i</to>
        <protocol>udp</protocol>
        <geometry>(Pos ((x 285) (y 162)) ((x 489) (y 163))  )</geometry>
    </connection>
    <connection>
        <from>/Line/grabber</from>
        <to>/Line/yarpview/img:i</to>
        <protocol>udp</protocol>
        <geometry>(Pos ((x 286) (y 249)) ((x 494) (y 249))  )</geometry>
    </connection>
</application>
