<application>
    <name>EyesViewer</name>
    <description>A fake robot eyes viewer running on a cluster of computer</description>
    <version>1.0</version>
    <authors>
        <author email="ali.paikan@iit.it">Ali Paikan</author>
    </authors>
    <module>
        <name>test_grabber</name>
        <parameters>--mode ball</parameters>
        <node>localhost</node>
        <prefix>/Ball</prefix>
        <deployer>yarpdev</deployer>
        <geometry>(Pos (x 106.5) (y 143.5))</geometry>
    </module>
    <module>
        <name>test_grabber</name>
        <parameters>--mode line</parameters>
        <node>localhost</node>
        <prefix>/Line</prefix>
        <deployer>yarpdev</deployer>
        <geometry>(Pos (x 107.5) (y 230.5))</geometry>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--x 100</parameters>
        <node>localhost</node>
        <prefix>/Ball</prefix>
        <geometry>(Pos (x 473.5) (y 143.5))</geometry>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--x 600</parameters>
        <node>localhost</node>
        <prefix>/Line</prefix>
        <geometry>(Pos (x 475) (y 229.9))</geometry>
    </module>
    <connection>
        <from>/Ball/grabber</from>
        <to>/Ball/yarpview/img:i</to>
        <protocol>udp</protocol>
        <geometry>(Pos ((x 374) (y 161)) ((x 274) (y 161)) ((x 474) (y 161))  )</geometry>
    </connection>
    <connection>
        <from>/Line/grabber</from>
        <to>/Line/yarpview/img:i</to>
        <protocol>udp</protocol>
        <geometry>(Pos ((x 375.5) (y 248)) ((x 275) (y 248)) ((x 476) (y 248))  )</geometry>
    </connection>
</application>
