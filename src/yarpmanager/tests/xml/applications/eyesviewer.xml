<application>
    <name>EyesViewer</name>
    <description>A fake robot eyes viewer running on a cluster of computer</description>
    <version>1.0</version>
    <authors>
        <author email="ali.paikan@iit.it">Ali Paikan</author>
    </authors>
    <module>
        <name>test_grabber</name>
        <parameters>--mode ball </parameters>
        <node>localhost</node>
        <prefix>/Ball</prefix>
        <deployer>yarpdev</deployer>
        <geometry>(Pos (x 128.5) (y 145.9))</geometry>
    </module>
    <module>
        <name>test_grabber</name>
        <parameters>--mode line</parameters>
        <node></node>
        <prefix>/Line</prefix>
        <deployer>yarpdev</deployer>
        <geometry>(Pos (x 129.5) (y 232.9))</geometry>
    </module>
    <module>
        <name>yarpview</name>
        <parameters></parameters>
        <node>localhost</node>
        <prefix>/Ball</prefix>
        <geometry>(Pos (x 499.5) (y 146.9))</geometry>
    </module>
    <module>
        <name>yarpview</name>
        <parameters></parameters>
        <node>localhost</node>
        <prefix>/Line</prefix>
        <geometry>(Pos (x 504.5) (y 232.9))</geometry>
    </module>
    <connection>
        <from>/Ball/grabber</from>
        <to>/Ball/yarpview/img:i</to>
        <protocol>udp</protocol>
        <geometry>(Pos ((x 296) (y 164)) ((x 500) (y 165))  )</geometry>
    </connection>
    <connection>
        <from>/Line/grabber</from>
        <to>/Line/yarpview/img:i</to>
        <protocol>udp</protocol>
        <geometry>(Pos ((x 297) (y 251)) ((x 505) (y 251))  )</geometry>
    </connection>
</application>
