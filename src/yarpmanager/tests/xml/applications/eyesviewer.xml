<application>
    <name>EyesViewer</name>
    <description>A fake robot eyes viewer running on a cluster of computer</description>
    <version>1.0</version>
    <authors>
        <author email="ali.paikan@iit.it">Ali Paikan</author>
    </authors>
    <module>
        <name>test_grabber</name>
        <parameters>--mode ball </parameters>
        <node>node1</node>
        <prefix>/Ball</prefix>
        <deployer>yarpdev</deployer>
        <geometry>(Pos (x 123) (y 145.3))</geometry>
    </module>
    <module>
        <name>test_grabber</name>
        <parameters>--mode line</parameters>
        <node>localhost</node>
        <prefix>/Line</prefix>
        <deployer>yarpdev</deployer>
        <geometry>(Pos (x 124) (y 232.3))</geometry>
    </module>
    <module>
        <name>yarpview</name>
        <parameters></parameters>
        <node>localhost</node>
        <prefix>/Ball</prefix>
        <geometry>(Pos (x 494) (y 146.3))</geometry>
    </module>
    <module>
        <name>yarpview</name>
        <parameters></parameters>
        <node>localhost</node>
        <prefix>/Line</prefix>
        <geometry>(Pos (x 499) (y 232.3))</geometry>
    </module>
    <connection>
        <from>/Ball/grabber</from>
        <to>/Ball/yarpview/img:i</to>
        <protocol>udp</protocol>
        <geometry>(Pos ((x 291) (y 163)) ((x 495) (y 164))  )</geometry>
    </connection>
    <connection>
        <from>/Line/grabber</from>
        <to>/Line/yarpview/img:i</to>
        <protocol>udp</protocol>
        <geometry>(Pos ((x 292) (y 250)) ((x 500) (y 250))  )</geometry>
    </connection>
</application>
