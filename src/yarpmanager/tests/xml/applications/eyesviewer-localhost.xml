<application>
    <name>EyesViewer-Localhost</name>
    <description>A fake robot eyes viewer with integrated applications running on localhost</description>
    <version>1.0</version>
    <authors>
        <author email="ali.paikan@iit.it">Ali Paikan</author>
    </authors>
    <module>
        <name>yarpview</name>
        <parameters>--x 100</parameters>
        <node>localhost</node>
        <prefix>/LeftView</prefix>
        <geometry>(Pos (x 420) (y 105.9))</geometry>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--x 500</parameters>
        <node>localhost</node>
        <prefix>/RightView</prefix>
        <geometry>(Pos (x 420) (y 225.9))</geometry>
    </module>
    <application>
        <name>FakeEyes</name>
        <prefix>/Left</prefix>
        <geometry>(Pos (x 105.898) (y 60.8984))</geometry>
    </application>
    <application>
        <name>FakeEyes</name>
        <prefix>/Right</prefix>
        <geometry>(Pos (x 105.898) (y 180.898))</geometry>
    </application>
    <connection>
        <from>/Left/grabber</from>
        <to>/LeftView/yarpview/img:i</to>
        <protocol>udp</protocol>
        <geometry>(Pos ((x 355) (y 124)) ((x 289) (y 124)) ((x 421) (y 124))  )</geometry>
    </connection>
    <connection>
        <from>/Right/grabber</from>
        <to>/RightView/yarpview/img:i</to>
        <protocol>udp</protocol>
        <geometry>(Pos ((x 355) (y 244)) ((x 289) (y 244)) ((x 421) (y 244))  )</geometry>
    </connection>
</application>
