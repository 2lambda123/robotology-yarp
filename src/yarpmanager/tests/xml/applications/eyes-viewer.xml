
<application>
	<!-- Generic information-->
	<name>EyesViewer</name>
	<description> A fake eobot eyes viewer</description>
	<version>1.0</version>
	
	<authors>
		<author email="ali.paikan@iit.it"> Ali Paikan </author>
	</authors>
	
	<!-- ports prefix (will be added to all modules and applications)-->
	<!--<prefix>...</prefix> -->
	
	<!-- Required modules -->		
	<module>
		<name>yarpview</name>
		<node>local</node>
		<prefix>/RightView</prefix>
	</module>

	<module>
		<name>yarpview</name>
		<node>local</node>
		<prefix>/LeftView</prefix>
	</module>


	<!-- Required applications -->
	<application> 
		<name>FakeEyes</name>
		<prefix>/left</prefix>
	 </application>

	<application> 
		<name>FakeEyes</name>
		<prefix>/right</prefix>
	 </application>


	<!-- Required connections -->
	<connection>
		<from>/left/eye</from>
		<to>/LeftView/yarpview/img:i</to>
		<protocol>udp</protocol>
	</connection>

	<connection>
		<from>/right/eye</from>
		<to>/RightView/yarpview/img:i</to>
		<protocol>udp</protocol>
	</connection>

</application>

