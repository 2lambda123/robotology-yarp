	<!-- ports prefix (will be added to all modules and applications)-->
	<!-- <prefix>/TestApp</prefix> -->
	
	<!-- Required modules -->
		
	<module>
		<name>yarpview</name>
		<node>local</node>
		<prefix>/right</prefix>
		<broker>yarprun</broker>
	</module>

	<module>
		<name>yarpview</name>
		<node>local</node>
		<prefix>/left</prefix>
	</module>


	<connection>
		<from external="true">/icubSim/cam/right</from>
		<to>/right/yarpview/img:i</to>
	</connection>

	<connection>
		<from external="true">/icubSim/cam/left</from>
		<to>/left/yarpview/img:i</to>
	</connection>

</application>
