// STUB FOR DEVICE

#include <stdio.h>
#include <yarp/dev/Drivers.h>

using namespace yarp::os;
using namespace yarp::dev;

void add_owned_@YARPDEV_NAME@(const char *owner) {
    if (owner==NULL) {
        fprintf(stderr,"Cannot add stub for device @YARPDEV_NAME@\n");
        return;
    }

    DriverCreator *factory = 
        new StubDriverCreator("@YARPDEV_NAME@",
                              "@YARPDEV_WRAPPER@",
                              "@YARPDEV_TYPE@",
                              owner);
    Drivers::factory().add(factory); // hand factory over to YARP

}


void add_@YARPDEV_NAME@() {
    add_owned_@YARPDEV_NAME@(NULL);
}
