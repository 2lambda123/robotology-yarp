
echo "Make sure you call this is ./scripts/compile-examples"

cd example || exit 1

BASE=$PWD
# go through all directories, except yarp1
for f in `find . -iname "CMakeLists.txt" | sed "s/.*yarp1.*//"`; do
    dir=`dirname $f`
    echo $dir
    cd $BASE
    cd $dir
    rm -f CMakeCache.txt
    cmake . || exit 1
    make clean
    make || exit 1
done
